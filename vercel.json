# Vercel Python Configuration
{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "runtime": "python3.9"
    }
  },
  "installCommand": "uv venv && source .venv/bin/activate && uv pip install reportlab==3.6.0 Pillow>=9.0.0",
  "buildCommand": "python3 -c \"import reportlab; print('Build complete - ReportLab installed')\""
}
